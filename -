  </div>  <script>
    const sampleProjects = [
      {id:1,title:'Papan Ide Interaktif',desc:'Alat digital sederhana untuk menampung dan memilih ide terbaik dari siswa.',tags:['kreativitas'],link:'#'},
      {id:2,title:'Sensor Sampah Pintar',desc:'Prototype inovasi untuk memantau kapasitas tong sampah di lingkungan sekolah.',tags:['inovasi','eksperimen'],link:'#'},
      {id:3,title:'Kartu Challenge Harian',desc:'Serangkaian tantangan kecil untuk memicu kreativitas setiap hari.',tags:['kreativitas','eksperimen'],link:'#'}
    ];

    function renderProjects(list){
      const grid = document.getElementById('projectsGrid');
      grid.innerHTML = '';
      list.forEach(p => {
        const el = document.createElement('div'); el.className='project';
        el.innerHTML = `<h3>${p.title}</h3><p style="color:var(--muted)">${p.desc}</p><div class="tags">${p.tags.map(t=>`<span class="tag">${t}</span>`).join('')}</div><div style="margin-top:10px"><a href='${p.link}' style='color:var(--muted);font-size:13px;text-decoration:none'>Lihat repo / demo</a></div>`;
        grid.appendChild(el);
      });
      document.getElementById('projectCount').innerText = list.length;
    }

    // initial render
    renderProjects(sampleProjects);

    document.getElementById('filter').addEventListener('change', ()=>applyFilters());
    document.getElementById('searchBtn').addEventListener('click', ()=>applyFilters());
    document.getElementById('query').addEventListener('keyup', (e)=>{ if(e.key==='Enter') applyFilters(); });

    function applyFilters(){
      const f = document.getElementById('filter').value;
      const q = document.getElementById('query').value.toLowerCase().trim();
      let list = sampleProjects.slice();
      if(f!=='all') list = list.filter(p=>p.tags.includes(f));
      if(q) list = list.filter(p=>p.title.toLowerCase().includes(q) || p.desc.toLowerCase().includes(q));
      renderProjects(list);
    }

    document.getElementById('addProjectBtn').addEventListener('click', ()=>{
      const newProj = {id:Date.now(),title:'Proyek Baru',desc:'Deskripsi singkat proyek baru — edit di index.html',tags:['eksperimen'],link:'#'};
      sampleProjects.push(newProj);
      renderProjects(sampleProjects);
      alert('Proyek contoh ditambahkan. Edit file untuk menyimpan perubahan permanen.');
    });

    function copyIdea(text){
      navigator.clipboard?.writeText(text).then(()=>{alert('Ide disalin ke clipboard!')}).catch(()=>{prompt('Salin ide ini:',text)});
    }

    document.getElementById('openIdeas').addEventListener('click', ()=>{
      location.hash = '#ideas';
      document.getElementById('projectsGrid').scrollIntoView({behavior:'smooth'});
    });

    document.getElementById('saveContact').addEventListener('click', ()=>{
      const gh = document.getElementById('githubHandle').value.trim();
      const em = document.getElementById('email').value.trim();
      if(!gh && !em){ document.getElementById('contactSaved').innerText='Isi github atau email dulu.'; return; }
      document.getElementById('contactSaved').innerText = `Tersimpan: ${gh ? gh+' ' : ''}${em ? '• '+em : ''}`;
    });
  </script></body>
</html>
